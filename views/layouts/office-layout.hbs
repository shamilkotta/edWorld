<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- mdbootstrap -->
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link rel="stylesheet" href="/static/mdb/css/mdb.min.css" />

    <!-- bootstrap-icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css"
    />
    <!-- mdbootstrap -->

    <link rel="shortcut icon" href="/static/svg/icon.svg" type="image/x-icon" />
    <link rel="stylesheet" href="/static/css/office-layout.css" />
    <link rel="stylesheet" href="/static/css/batches-partials.css" />
    <link rel="stylesheet" href="/static/css/style.css" />
    <title>edWorld</title>
  </head>
  <body>
    <main class="grid office-layout">

      <section class="sidebar vh-100" id="sidebar">
        <div
          class="d-flex flex-column vh-100 py-3 px-2 justify-content-between"
        >
          <a href="/office" class="px-3 pt-2 d-none d-lg-flex">
            <img src="/static/svg/logo.svg" alt="edWorld" height="30px" />
          </a>
          <div class="px-3 pt-2 d-flex d-md-none justify-content-end">
            <i
              class="fa-solid fa-xmark fa-xl"
              onclick="toggleMobileNave(false)"
            ></i>
          </div>
          <div class="pt-1 d-none d-md-flex d-lg-none justify-content-center">
            <img src="/static/svg/icon.svg" alt="edWorld" height="40px" />
          </div>
          <div class="sidebar-items d-flex flex-column">
            <a href="/office">
              <img src="/static/icon/dashboard.svg" width="22px" alt="" />
              <span class="ms-2 d-md-none d-lg-inline">Dashboard</span>
            </a>
            <a href="/office/batches">
              <img src="/static/icon/batch.svg" width="25px" alt="" />
              <span class="ms-2 d-md-none d-lg-inline">Batches</span>
            </a>
            <a href="/office/teachers">
              <img src="/static/icon/teacher.svg" width="25px" alt="" />
              <span class="ms-2 d-md-none d-lg-inline">Teachers</span>
            </a>
            <a href="/office/students">
              <img src="/static/icon/student.svg" width="25px" alt="" />
              <span class="ms-2 d-md-none d-lg-inline">Students</span>
            </a>
          </div>
          <div class="mx-3 mx-md-2 mb-2 logout">
          </div>
        </div>
      </section>
      <section class="main">
        <nav class="nav-bar p-3">
          <div class="d-md-none">
            <i
              class="fa-solid fa-bars fa-xl"
              onclick="toggleMobileNave(true)"
            ></i>
            <img
              src="/static/svg/logo.svg"
              class="ms-2"
              alt="edWorld"
              height="30px"
            />
          </div>
        </nav>
        <div class="px-4 py-2" style="max-width: 1400px;">
          {{{body}}}
        </div>
      </section>
    </main>

    <!-- MDB -->
    <script type="text/javascript" src="/static/mdb/js/mdb.min.js"></script>
    <script>
      const instance = new mdb.Datatable(document.getElementById('datatable'))
      document.getElementById('datatable-search-input').addEventListener('input',
      (e) => { instance.search(e.target.value); });
    </script>
    <script src="/static/js/script.js"></script>
  </body>
</html>